<div class="container">
  <div class="row">
    <div class="col-md-10">
      <%= form_with model: @end_user, url: admin_end_user_path do |f| %>
      <table class="table table-borderless">
        <thead class="thead-light">
          <tr>
            <th><%= @end_user.last_name+@end_user.first_name %>さんの会員情報編集</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @end_user.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postcode %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <%= form_with(model: @end_user, local: true) do |f| %>
            <td>
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, "有効" %>
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, "退会" %>
            </td>
            <% end %>
          </tr>
          <tr>
            <td><%=f.submit "変更を保存" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>