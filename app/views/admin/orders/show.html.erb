<div class="container mt-3">
  <h2><span class="bg-light">注文履歴詳細</span></h2>
  <table class="table table-borderless">
    <tbody>
      <tr>
        <th scope="row" style="width: 20%"><p>購入者</p></th>
        <td><%= @order.name %></td>
        </tr>
        <tr>
          <th scope="row"><p>注文日</p></th>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th scope="row"><p>配送先</p></th>
          <td>
            〒<%= @order.postcode %> <%= @order.address %> <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th scope="row"><p>支払方法</p></th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr> 
          <th scope="row"><p>注文ステータス</p></th>
          <td>
          <%= form_with model: @order, url: admin_order_path, method: :patch do |o| %>
            <%= o.select :order_status, Order.order_statuses.keys.map{|k| [I18n.t("enums.order.order_status.#{k}"), k]},class: "form-control"%>
            <%= o.submit "更新" , class: "btn btn-success" %>
          <% end %>
          </td>
        </tr>
    </tbody>
  </table>
 <div class="row">
  <div class="col-sm-9">
       <table class="table">
        <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
           <th>製作ステータス</th>
        </tr>
        </thead>
        <tbody>
         <% @order.order_details.each do |order_detail| %>
         <tr>
            <td><p><%= order_detail.product.name %></p></td>
            <td><p><%= order_detail.tax_price %></p></td>
            <td><p><%= order_detail.quantity %></p></td>
            <td><p><%= order_detail.tax_price*order_detail.quantity %></p></td>
            <td>
              <%= form_with model: order_detail, url: admin_order_detail_path(order_id: @order.id, id: order_detail.id), method: :patch do |f|%>
                <%= f.select :production_status, OrderDetail.production_statuses.keys.map{|k| [I18n.t("enums.order_detail.production_status.#{k}"), k]},class: "form-control"%>
                <%= f.submit "更新", class:"btn btn-success"%>
              <% end %>
            </td>
         </tr>
         <% end %>
        </tbody>
       </table>
  </div>
  <div class="col-sm-3">
       <table class="table table-borderless">
        <tr>
         <tbody>
          <th scope="row">商品合計</th>
          <td><%= @order.bill-@order.shipping_fee %>円</td>
        </tr>
        <tr>
          <th scope="row">送料</th>
          <td><%= @order.shipping_fee %>円</td>
        </tr>
        <tr>
          <th scope="row">請求金額合計</th>
          <td><%= @order.bill %>円</td>
        </tr>
         </tbody>
      </table>
  </div>

 </div>
</div>