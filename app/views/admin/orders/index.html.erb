<div class="container">
 <div class="row">
  <div class="col-sm-10 mx-auto mt-3">
  <h2><span class="bg-light">注文履歴一覧</span></h2>
  <table class="table mt-3">
    <thead class="table-light">
      <tr>
        <th>注文日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
      <tbody>
        <% @orders.each do |o| %>
        <tr>
          <td>
            <%= link_to admin_order_path(o) do %>
              <%= o.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
            <% end %>
          </td>
          <td><%= o.name %></td>
          <td><%= o.order_details.sum(:quantity) %></td>
          <td><%= o.order_status_i18n %></td>
        </tr>
        <% end %>
      </tbody>
    </thead>
  </table>
  <%= paginate @orders %>
  </div>
 </div>
</div>