<div class="container">
 <div class="row">
  <div class="col-sm-4">
 <h2 class="mt-3"><span class="bg-light">商品詳細</span></h2>
 <% if @product.image.attached? %>
 <%= image_tag @product.image,size:"250x170" %>
 <% else %>
 <%= image_tag 'no_image',size:'250x170' %>
 <% end %>
  </div>
  <div class="col-sm-6">
   <table class="table table-borderless mt-5">
    <tbody>
     <tr>
      <th scope="row">商品名</th>
      <td><%= @product.name %></td>
     </tr>
     <tr>
      <th scope="row">ジャンル</th>
      <td><%= @product.genre.name %></td>
     </tr>
     <tr>
      <th scope="row">税込価格</th>
       <td><%= @product.add_tax_price.to_s(:dalimited) %>円(税抜価格:<%= @product.non_taxed_price %>円)</td>
     </tr>
     <tr>
      <th scope="row">販売ステータス</th>
       <td><%= @product.is_active ? '販売中' : '販売停止中' %></td>
     </tr>
    </tbody>
   </table>
  </div>
 </div>
</div>
<div class="text-center">
 <%= button_to "編集する",  edit_admin_product_path(@product.id),method: :get, class: "btn btn-lg btn-success" %>
</div>

