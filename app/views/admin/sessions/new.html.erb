<div class="container-fluid registration py-5">
  <div class="row">
    <div class="offset-2">
    <h2 class="red-border px-3">管理者ログイン</h2>
  </div>
</div>
<div class="row mt-3">
  <div class="offset-4 col-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :"メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example", class: "form-control offset-1 col-10" %>
      </div>
      <div class="form-group">
        <%= f.label :"パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control offset-1 col-10" %>
      </div>
    <div class="row">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  </div>
    <% end %>
</div>

<%= render "admin/shared/links" %>
