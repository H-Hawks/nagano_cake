<div class="container">
 <div class="row">
   <div class="col-sm-4 offset-1 mt-5">
  <% if @product.image.attached? %>
   <%= image_tag @product.image, size: "200x150" %>
  <% else %>
   <%= image_tag 'no_image', size: "200x150" %>
  <% end %>
   </div>
   <div class="col-sm-4 mt-5">
    <%= form_with model: @in_cart_product, url:in_cart_products_path, method: :post do |f| %>
     <%= f.hidden_field :product_id, :value => @product.id %>
     <h3><%= @product.name %></h3>
     <p><%= @product.description %></p>
     <h4>￥<%= @product.add_tax_price %>（税込）</h4>
  
  <%= f.select :quantity,*[1..9], prompt: "選択してください" %>
  <%= f.submit "カートに入れる" %> 
  　<% end %>
   </div>
  </div>
</div>