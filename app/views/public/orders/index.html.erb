<div class="container">
  <div class="row">
    <div class="col-md-11 mx-auto mt-3">
     <h2 class="ml-3"><span class="bg-light">注文履歴一覧</span><h2>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="table-secondary">注文日</th>
            <th class="table-secondary">配送先</th>
            <th class="table-secondary">注文商品</th>
            <th class="table-secondary">支払金額</th>
            <th class="table-secondary">ステータス</th>
            <th class="table-secondary">注文詳細</th>
          </tr>
        </thead>
        <% @orders.each do |o| %>
        <tbody>
          <tr>
            <td><%= o.created_at %></td>
            <td>
              <p>〒<%= o.postcode %></p>
              <p><%= o.address %></p>
              <p><%= o.name %></p>
            </td>
            <td>
            <% o.order_details.each do |o| %>
              <p><%= o.product.name %></p>
            <%end%>
            </td>
            <td><%= o.bill %>円</td>
            <td><%= o.order_status_i18n %></td>
            <td><%= link_to "表示する", order_path(o.id), class: "btn btn-primary" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>