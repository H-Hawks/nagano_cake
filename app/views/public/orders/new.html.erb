<div class="container">
  <div class="row">
    <div class="col-md-10">
      <table class="table table-borderless">
        <thead class="thead-light">
          <tr>
            <th>注文情報入力</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>支払方法</td>
          </tr>
          <tr>
          <%= form_with model: Order.new, locale: true do |f| %>
            <td><%= f.radio_button :payment_method, 0 %>
                <%= f.label :payment_method, :クレジットカード, checked: true %>
            </td>
            <td><%= f.radio_button :payment_method, 1 %>
                <%= f.label :payment_method, :銀行振込, checked: true %>
            </td>
          </tr>
          <tr>
            <td>お届け先</td>
            <tr><%= form.radio_button :address, :ご自身の住所 %>
              <td><%= @user.address %></td>
            </tr>
            <tr><%= form.radio_button :address, :登録済住所から選択 %>
              <td><%= @user.addresses %></td>
            </tr>
            
            <%= form_with model: @address do |f| %>
            
              <tr><%= form.radio_button :address, :新しいお届け先 %></tr>
              
                <td>郵便番号(ハイフンなし)
                  <td><%= f.text_field :postcode %></td>
                </td>
                
                <td>住所
                  <td><%= f.text_field :address %></td>
                </td>
                
                <td>宛名
                  <td><%= f.text_field :name %></td>
                </td>
            <% end %>
            </tr>
          </tr>
          <%= f.submit "確認画面に進む" %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>