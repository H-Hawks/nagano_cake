<div class="container">
  <div class="row">
    <div class="col-md-15">
      <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
      <table class="table table-borderless">
        <thead class="thead-light">
          <tr>
            <th>注文情報確認</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td>商品名</td>
            <% @in_cart_products.each do |i| %>
            <td><%= i.product.name %></td>
            <% end %>
          </tr>
          <tr>
            <td>単価(税込)</td>
            <% @in_cart_products.each do |i| %>
            <td><%= i.product.add_tax_price %></td>
            <% end %>
          </tr>
          <tr>
            <td>数量</td>
            <% @in_cart_products.each do |i| %>
            <td><%= i.quantity %></td>
            <% end %>
          </tr>
          <tr>
            <td>小計</td>
            <% @in_cart_products.each do |i| %>
            <td><%= i.subtotal %></td>
            <% end %>
          </tr>

          <tr>
            <td>送料</td>
            <td><%= @order.shipping_fee %></td>
            <%= f.hidden_field :shipping_fee, :value => @order.shipping_fee %>
          </tr>
          <tr>
            <td>商品合計</td>
            <td><%= @total %></td>
          </tr>
          <tr>
            <td>請求金額</td>
            <td><%= @total + @order.shipping_fee %></td>
            <%= f.hidden_field :bill, :value => @total + @order.shipping_fee %>
          </tr>

        </tbody>
      </table>
      <table class="table table-borderless">
        <thead class="thead-light">
          <tr>
            <th>支払方法</th>
          </tr>
        </thead>
      </table>
      <tbody>
        <tr>
          <td><%= @order.payment_method_i18n %></td>
          <%= f.hidden_field :payment_method, :value => @order.payment_method %>
        </tr>
      </tbody>
      <table class="table table-borderless">
        <thead class="thead-light">
          <tr>
            <th>お届け先</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>〒<%= @order.postcode %><%= @order.address %></td>
            <td><%= @order.name %></td>
            <%= f.hidden_field :postcode, :value => @order.postcode %>
            <%= f.hidden_field :address, :value => @order.address %>
            <%= f.hidden_field :name, :value => @order.name %>
            <%#= f.hidden_field :order_status, :value => 0 %>
            <%#72行目消してテーブルのカラムを変更した(defalt値を設定した)マイグレーションファイルを追加%>
          </tr>
          <tr>
            <td><%= f.submit "注文を確定する" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>