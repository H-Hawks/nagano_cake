<div class="container">
 <div class="row">
  <div class="col-sm-10 mt-3 mx-auto">
 <h3><span class="bg-light">配送先登録/一覧</span></h3>
    <%= form_with model: @address do |f| %>
    <table class="table table-borderless">
     <tbody>
      <tr>
      <div class="field">
       <td style="width :30%"><%= f.label :"郵便番号(ハイフンなし)" %></td>
       <td><%= f.text_field :postcode %></td>
      </div>
      </tr>
      <tr>
        <div class="field">
        <td><%= f.label :"住所" %></td>
        <td><%= f.text_field :address %></td>
        </div>
      </tr>
      <tr>
      <div class="field">
        <td><%= f.label :"宛名" %></td>
        <td><%= f.text_field :name %></td>
      </div>
      </tr>
     </tbody>
    </table>
    <div class="text-center">
     <%= f.submit '新規登録', class: "btn btn-success btn-xs"  %>
    </div>
    <% end %>
     <table class="table table-bordered">
       <% @addresses.each do |address| %>
      <thead class="table-secondary">
       <tr>  
        <td>郵便番号</td>
        <td>住所</td>
        <td>宛名</td>
        <td></td>
       </tr>
      </thead>
      <tbody>
       <tr>
        <td><%= address.postcode %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_address_path(address), class:  "btn btn-sm btn-success" %>
            <%= link_to "削除する", address_path(address), class: "btn btn-sm btn-danger", method: :delete %>
        </td>
       </tr>
      </tbody>
       <% end %>
     </table>
      
  </div>
 </div>
</div>    
          
     
  
 