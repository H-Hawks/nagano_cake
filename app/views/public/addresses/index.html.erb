  <div>
    <h3>配送先登録/一覧</h3>
  </div>
    <%= form_with model: @address do |f| %>
      <div class="field">
        <%= f.label :"郵便番号(ハイフンなし)" %>
        <%= f.text_field :postcode %>
      </div>
        <div class="field">
          <%= f.label :"住所" %>
          <%= f.text_field :address %>
        </div>
      <div class="field">
        <%= f.label :"宛名" %>
        <%= f.text_field :name %>
      </div>
        <%= f.submit '新規登録', class: "btn btn-success btn-xs"  %>
    <% end %>
      <% @addresses.each do |address| %>
        <span><%= address.postcode %></span>
        <span><%= address.address %></span>
        <span><%= address.name %></span>
          <%= link_to "編集する", edit_address_path(address), class:  "btn btn-sm btn-success" %>
        <% if @address.end_user_id == current_user %>
          <%= link_to "削除する", address_path(address), class: "btn btn-sm btn-danger", method: :delete %>
        <% end %>
      <% end %>
      